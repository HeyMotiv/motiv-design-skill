    "usage": {
      "challengeTitle": {
        "element": "Challenge title/name",
        "font": "Creator's choice from fonts above",
        "size": "24-28px",
        "weight": "600-700",
        "customizable": true
      },
      "challengeSubtitle": {
        "element": "Date range, creator name",
        "font": "Roboto (app default)",
        "size": "14px",
        "weight": "400",
        "customizable": false
      },
      "allOtherText": {
        "element": "Stats, buttons, body, labels",
        "font": "Roboto (app default)",
        "customizable": false,
        "note": "Only the challenge title uses the accent font for consistency"
      }
    }
  },

  "application": {
    "$description": "How colors are applied in challenge screens.",

    "header": {
      "background": {
        "option1": "theme.colors.[selected].background with image overlay",
        "option2": "theme.colors.[selected].emphasis as solid (no image)"
      },
      "title": {
        "color": "theme.colors.[selected].text OR white (on dark/image bg)",
        "font": "theme.typography.fonts.[selected].family"
      },
      "creatorBadge": {
        "ring": "theme.colors.[selected].emphasis"
      },
      "statusBadge": {
        "background": "theme.colors.[selected].emphasis",
        "text": "theme.colors.[selected].onEmphasis"
      }
    },

    "content": {
      "progressBar": {
        "track": "theme.colors.[selected].background",
        "fill": "theme.colors.[selected].emphasis"
      },
      "buttons": {
        "primary": {
          "background": "theme.colors.[selected].emphasis",
          "text": "theme.colors.[selected].onEmphasis"
        },
        "secondary": {
          "background": "transparent",
          "border": "theme.colors.[selected].emphasis",
          "text": "theme.colors.[selected].emphasis"
        }
      },
      "badges": {
        "background": "theme.colors.[selected].background",
        "text": "theme.colors.[selected].text"
      },
      "links": {
        "color": "theme.colors.[selected].emphasis"
      },
      "highlights": {
        "background": "theme.colors.[selected].background",
        "border": "theme.colors.[selected].emphasis (optional)"
      }
    },

    "celebration": {
      "$description": "Win/loss screens always use the dark celebration background from app tokens.",
      "background": "app.colors.celebration.background (#1E1B4B)",
      "accents": "theme.colors.[selected].emphasis",
      "confetti": "theme.colors.[selected].emphasis + variants"
    }
  },

