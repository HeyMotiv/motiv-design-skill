{
  "$schema": "design-tokens-v1",
  "$type": "typography",
  "$description": "Motiv typography system. Roboto for UI and product screens, Source Serif 4 for editorial and storytelling. Clean, readable, inviting.",

  "fontFamilies": {
    "primary": {
      "value": "Roboto, system-ui, sans-serif",
      "description": "Primary typeface. Use for all UI, body copy, and product screens.",
      "weights": [400, 500, 600],
      "usage": ["body-text", "headings", "buttons", "labels", "navigation"]
    },
    "secondary": {
      "value": "'Source Serif 4', Georgia, serif",
      "description": "Secondary typeface. Use for editorial sections, creator stories, and long-form explanations.",
      "weights": [400, 600, 700],
      "usage": ["editorial-heading", "creator-story", "long-form-body", "display-heading"]
    },
    "mono": {
      "value": "Roboto Mono, monospace",
      "description": "Monospace font. Use for numbers, stats, and data displays.",
      "weights": [400, 500],
      "usage": ["stat-numbers", "countdown", "data-display"]
    }
  },

  "fontWeights": {
    "regular": {
      "value": 400,
      "description": "Regular weight. Body text, descriptions, secondary content."
    },
    "medium": {
      "value": 500,
      "description": "Medium weight. Labels, buttons, emphasized body text."
    },
    "semibold": {
      "value": 600,
      "description": "Semibold weight. Headings, subheadings, CTAs, emphasis."
    }
  },

  "scale": {
    "display-large": {
      "family": "secondary",
      "size": "48px",
      "lineHeight": "56px",
      "weight": 700,
      "letterSpacing": "-0.02em",
      "description": "Large display text. Motiv logo, major celebrations, editorial heroes.",
      "usage": ["logo", "win-celebration", "editorial-hero"]
    },
    "display-medium": {
      "family": "secondary",
      "size": "36px",
      "lineHeight": "44px",
      "weight": 700,
      "letterSpacing": "-0.01em",
      "description": "Medium display text. Onboarding headlines, challenge titles, creator story headers.",
      "usage": ["onboarding-headline", "challenge-title-large", "creator-story-header"]
    },
    "display-small": {
      "family": "secondary",
      "size": "28px",
      "lineHeight": "36px",
      "weight": 600,
      "letterSpacing": "-0.01em",
      "description": "Small display text. Section heroes, feature callouts, editorial subheads.",
      "usage": ["section-hero", "feature-headline", "editorial-subhead"]
    },
    "heading-1": {
      "family": "primary",
      "size": "24px",
      "lineHeight": "32px",
      "weight": 600,
      "letterSpacing": "-0.01em",
      "description": "Heading 1. Screen titles, major section headers.",
      "usage": ["screen-title", "section-header"]
    },
    "heading-2": {
      "family": "primary",
      "size": "20px",
      "lineHeight": "28px",
      "weight": 600,
      "letterSpacing": "0",
      "description": "Heading 2. Card titles, subsection headers.",
      "usage": ["card-title", "subsection-header"]
    },
    "heading-3": {
      "family": "primary",
      "size": "18px",
      "lineHeight": "24px",
      "weight": 600,
      "letterSpacing": "0",
      "description": "Heading 3. List headers, small card titles.",
      "usage": ["list-header", "small-card-title"]
    },
    "body-large": {
      "family": "primary",
      "size": "18px",
      "lineHeight": "28px",
      "weight": 400,
      "letterSpacing": "0",
      "description": "Large body text. Onboarding descriptions, important content.",
      "usage": ["onboarding-body", "featured-description"]
    },
    "body": {
      "family": "primary",
      "size": "16px",
      "lineHeight": "24px",
      "weight": 400,
      "letterSpacing": "0",
      "description": "Standard body text. Main content, descriptions.",
      "usage": ["body-text", "card-description", "list-item-text"]
    },
    "body-small": {
      "family": "primary",
      "size": "14px",
      "lineHeight": "20px",
      "weight": 400,
      "letterSpacing": "0",
      "description": "Small body text. Secondary content, dense layouts.",
      "usage": ["secondary-text", "compact-list-item"]
    },
    "label": {
      "family": "primary",
      "size": "14px",
      "lineHeight": "20px",
      "weight": 500,
      "letterSpacing": "0.01em",
      "description": "Label text. Form labels, button text, navigation items.",
      "usage": ["form-label", "button-text", "nav-item"]
    },
    "label-small": {
      "family": "primary",
      "size": "12px",
      "lineHeight": "16px",
      "weight": 500,
      "letterSpacing": "0.02em",
      "description": "Small label text. Badges, tags, micro-labels.",
      "usage": ["badge-text", "tag-text", "input-hint"]
    },
    "caption": {
      "family": "primary",
      "size": "12px",
      "lineHeight": "16px",
      "weight": 400,
      "letterSpacing": "0.01em",
      "description": "Caption text. Timestamps, helper text, metadata.",
      "usage": ["timestamp", "helper-text", "metadata"]
    },
    "overline": {
      "family": "primary",
      "size": "10px",
      "lineHeight": "14px",
      "weight": 600,
      "letterSpacing": "0.1em",
      "textTransform": "uppercase",
      "description": "Overline text. Section labels, category markers.",
      "usage": ["section-label", "category-overline"]
    },
    "stat-large": {
      "family": "primary",
      "size": "40px",
      "lineHeight": "48px",
      "weight": 600,
      "letterSpacing": "-0.02em",
      "description": "Large stat number. Hero metrics, reward amounts.",
      "usage": ["reward-amount", "hero-stat"]
    },
    "stat-medium": {
      "family": "primary",
      "size": "28px",
      "lineHeight": "36px",
      "weight": 600,
      "letterSpacing": "-0.01em",
      "description": "Medium stat number. Dashboard metrics.",
      "usage": ["dashboard-stat", "progress-number"]
    },
    "stat-small": {
      "family": "primary",
      "size": "20px",
      "lineHeight": "28px",
      "weight": 600,
      "letterSpacing": "0",
      "description": "Small stat number. Inline metrics, compact stats.",
      "usage": ["inline-stat", "compact-metric"]
    }
  },

  "styles": {
    "screenTitle": {
      "extends": "heading-1",
      "color": "text.primary",
      "description": "Standard screen title style."
    },
    "onboardingHeadline": {
      "extends": "display-medium",
      "color": "text.primary",
      "textAlign": "center",
      "description": "Onboarding screen headlines."
    },
    "cardTitle": {
      "extends": "heading-2",
      "color": "text.primary",
      "description": "Card title style."
    },
    "bodyText": {
      "extends": "body",
      "color": "text.primary",
      "description": "Standard body text style."
    },
    "secondaryText": {
      "extends": "body-small",
      "color": "text.secondary",
      "description": "Secondary/supporting text style."
    },
    "buttonPrimary": {
      "extends": "label",
      "color": "text.inverse",
      "description": "Primary button text style."
    },
    "buttonSecondary": {
      "extends": "label",
      "color": "text.primary",
      "description": "Secondary/outline button text style."
    },
    "celebrationTitle": {
      "extends": "display-large",
      "color": "celebration.text",
      "description": "Celebration screen title (on dark background)."
    },
    "link": {
      "extends": "body",
      "color": "text.link",
      "textDecoration": "underline",
      "description": "Inline link style."
    }
  },

  "accessibility": {
    "minimumSize": "12px",
    "minimumTouchLabelSize": "14px",
    "minimumContrastBody": "4.5:1",
    "minimumContrastLarge": "3:1",
    "notes": "All text meets WCAG AA contrast requirements. Body text uses 16px minimum for comfortable reading."
  }
}
